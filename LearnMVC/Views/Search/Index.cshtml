
@{
    ViewBag.Title = "Index";
}
<style>
.well{
    background-color:antiquewhite;
    box-shadow:rgba(0,0,0,0.4) 10px 10px;

}
</style>
<h2 id="headings">Search Control</h2>
<hr />
<div class="container" id="headings">
    <div class="row">
        <div class="col-lg-3 col-md-6 col-sm-12">
            @*<h4> @Html.ActionLink("View Users List", "AllUserList", "Search", new { UserID = Session["UserID"].ToString() }, new{ @class = "well well-lg" })</h4>*@
            <a href='~/Search/AllUserList?UserID=@Session["UserID"].ToString()'>
                <div class="well well-lg">
                    <h4>View Users List</h4>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
            <a href="#">
                <div class="well well-lg">
                    <h4>Consignment Details</h4>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
            <a href="~/Search/SearchAnnouncements">
                <div class="well well-lg">
                    <h4>Announcements List</h4>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
            <a href="#">
                <div class="well well-lg">
                    <h4 data-target="#autogendate" data-toggle="modal">Autogenerated Dates</h4>
                </div>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3 col-md-6 col-sm-12">
            <a href="#">
                <div class="well well-lg">
                    <h4>AutoGenerated Names</h4>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
            <a href="#">
                <div class="well well-lg">
                    <h4>Postal Office List</h4>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
            <a href="#">
                <div class="well well-lg">
                    <h4>ASCII Reference List</h4>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
            <a href="#">
                <div class="well well-lg">
                    <h4>Upload Transactions</h4>
                </div>
            </a>
        </div>
    </div>
</div>

@*Modals*@ 
@{ 
    using (Html.BeginForm("AutogenerateDates","Search",FormMethod.Post))
    {
        <div class="modal fade" id="autogendate" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button class="close" type="button" data-dismiss="modal">&times;</button>
                        <h3 id="headings" class="modal-title">Autogenerate Dates</h3>
                    </div>
                    <div class="modal-body">
                        <div class="row">

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Generate</button>
                        <button type="reset" class="btn btn-primary">Reset Form</button>
                        <button class="btn btn-primary" type="button" data-dismiss="modal">Back</button>
                    </div>
                </div>
            </div>
        </div>
    }
}
